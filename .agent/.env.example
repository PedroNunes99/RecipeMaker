# LLM Configuration
OLLAMA_URL=http://localhost:11434
LLM_MODEL=deepseek-coder:33b
MAX_TOKENS=4096
TEMPERATURE=0.7

# Agent Execution Mode
# - false: Advisory mode (agents provide instructions only)
# - semi: Generate code, ask before executing
# - true: Full autonomy (auto-execute with safety checks)
AUTONOMOUS_MODE=false
AUTO_EXECUTE_CODE=false
AUTO_MODIFY_FILES=false
REQUIRE_APPROVAL=true

# Git Automation
AUTO_PR=true                    # Create PRs automatically after tasks
AUTO_PUSH=true                  # Push branches automatically
AUTO_COMMIT=false               # Commit changes automatically (use with caution)

# Safety Settings
MAX_FILE_CHANGES=10
PROTECTED_PATHS=server/prisma/migrations,node_modules,.git
DRY_RUN=false

# Workflow Settings
CHECK_INTERVAL=300000
MAX_CONCURRENT_AGENTS=5

# GitHub Configuration
GITHUB_REPO=yourusername/recipemaker
GITHUB_TOKEN=ghp_xxx            # Optional, gh CLI uses its own auth
